<%- include('../layout.ejs'); %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <img
        src="<%=product.image %>"
        alt="<%=product.image.name %>"
        class="img-fluid"
      />
    </div>
    <div class="col-md-4">
      <h3><%=product.name %></h3>
      <h4><%=product.price %> &euro;</h4>

      <form method="post">
        <div class="btn-group" role="group">
          <input type="hidden" name="quantity" id="quantity" value="1" />
          <button type="button" id="minus" class="btn btn-secondary">-</button>
          <button type="button" id="total" class="btn btn-secondary">1</button>
          <button type="button" id="plus" class="btn btn-secondary">+</button>
        </div>

        <div class="form-group mt-5">
          <!-- Récupération des données originales -->
          <input
            type="hidden"
            name="product_id"
            id="product_id"
            value="<%= product._id %>"
          />
          <input
            type="hidden"
            name="priceHidden"
            id="priceHidden"
            value="<%= product.price %>"
          />
          <!-- Affichage des données -->
          <input
            type="text"
            name="item"
            class="form-control"
            value="<%= product.name %>"
          />
          <input
            type="text"
            name="priceValue"
            id="priceValue"
            class="form-control"
            value="<%= product.price %>"
          />
          <br />

          <% if(user) { %>
          <div class="mt-3">
            <button type="submit" class="btn btn-info">
              Ajouter au panier
            </button>
          </div>
          <% } else { %>
          <div class="mt-3">
            <a href="/signup" class="btn btn-dark"
              >Inscrivez-vous ou connectez-vous pour commander</a
            >
            <% } %>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
