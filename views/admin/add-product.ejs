<%- include('../layout.ejs'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-5">

      <h2>Ajouter un produit</h2>

      <% if(message.length > 0 ){ %>
        <div class="mt-3 alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          <%= message %>
          </div>
        </div>
      <% } %>

      <form method="post" class="mt-3" enctype="multipart/form-data" action="/upload">

        <div class="form-label">

        <select name="category" id="" class="form-control">

        <% for(var i = 0; i< categories.length; i++) { %>

        <option required><%=categories[i].name%></option>

        <% } %>   

        </select>
        </div>

        <div class="form-label">
            <input type="text" name="name" class="form-control" placeholder="Nom du produit" required>
        </div>

        <div class="form-label">
            <input type="number" name="price" class="form-control" placeholder="Prix du produit" required>
        </div>
        
        <div class="form-label">
        <input type="file" name="image" class="form-control" placeholder="Téléverser une image" required>
        </div>

        <input type="submit" value="Ajouter" class="btn btn-info" />
      </form>
    </div>
  </div>
</div>
